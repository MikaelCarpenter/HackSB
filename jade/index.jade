				option(value="9.5") 9:30AM
				option(value="10.0") 10:00AM
				option(value="10.5") 10:30AM
				option(value="11.0") 11:00AM
				option(value="11.5") 11:30AM
				option(value="12.0") 12:00PM
				option(value="12.5") 12:30PM
