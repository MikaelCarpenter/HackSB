@font-face
	font-family Pacifico
	font-style normal
	src url(/assets/Pacifico.ttf)

body
	text-align center
	font-family 'Oswald', sans-serif
	
	.bg
		position fixed
		left 0
		top 0
		z-index 1

		display block
		background url('/assets/images/bg1.jpg') center center no-repeat
		width 100%
		height 100%

		-webkit-filter blur(2px)
		-moz-filter blur(2px)
		-o-filter blur(2px)
		-ms-filter blur(2px)
		filter blur(2px)
		
	.content
		position relative
		z-index 9999
		margin-left 20px
		margin-right 20px
	
		.titleWrap
			h1
				color #FFD922
				font-size 100px
				font-family 'Pacifico'
				text-shadow 4px 2px rgba(0,0,0,0.7)
				margin 30px 0px 10px 0px
				
			p
				color #1FA1E8
				font-size 24px
				font-style italic
				text-shadow 2px 1px rgba(0,0,0,0.7)
				margin 0
				
		.inputWrap
			max-width 600px
			margin 100px auto
			
			.dotwWrap
				width 50%
				display inline-block
				
				select
					width 150px
					font-size 20px
					font-family 'Oswald', sans-serif
					color #1FA1E8
					background transparent
					border 0
					outline 0
				
			.timeWrap
				width 50%
				display inline-block
				
				select
					width 150px
					font-size 20px
					font-family 'Oswald', sans-serif
					color #1FA1E8
					background transparent
					border 0
					outline 0
					
			.btnWrap
				input
					margin-top 100px
					width 200px
					font-size 24px
					text-shadow 2px 1px rgba(0,0,0,0.7)
					color #FFD922
					background transparent
					border 2px solid #FFD922
					border-radius 5px
					outline 0
					
					&:hover
						cursor pointer
						border 3px solid #FFD922
				
		.buildingsWrap
			width 600px
			background-color rgba(0,0,0,0.3)
			color #FFD922
			border 2px solid #000
			border-radius 15px
			margin 100px auto
			
			.headerWrap
				h2
					color #FFD922
					text-shadow 2px 1px rgba(0,0,0,0.7)
			
			.listWrap
				#buildings
					list-style-type none
					
					li
						font-size 24px
						
					.building
						&:hover
							cursor pointer
							
		.roomsWrap
			width 600px
			background-color rgba(0,0,0,0.3)
			color #FFD922
			border 2px solid #000
			border-radius 15px
			margin 100px auto
			padding 0px 5px
			
			.third
				width 190px
				display inline-block

			label
				verticle-align top
			
			ul
				list-style-type none
				
			#room, #size
				margin-right 10px
						