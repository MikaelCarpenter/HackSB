body
	text-align center
	font-family 'Oswald', sans-serif
	
	.titleWrap
		h1
			color #FFD922
			font-size 100px
			margin 80px 0px 10px 0px
			
		p
			color #1FA1E8
			font-size 24px
			font-style italic
			margin 0
			
	.inputWrap
		max-width 600px
		margin 100px auto
		
		.dotwWrap
			width 50%
			display inline-block
			
			select
				width 150px
				font-size 20px
				font-family 'Oswald', sans-serif
				color #1FA1E8
				background transparent
				border 0
				outline 0
			
		.timeWrap
			width 50%
			display inline-block
			
			select
				width 150px
				font-size 20px
				font-family 'Oswald', sans-serif
				color #1FA1E8
				background transparent
				border 0
				outline 0
				
		.btnWrap
			input
				margin-top 100px
				width 200px
				font-size 24px
				color #FFD922
				background transparent
				border 1px solid #FFD922
				border-radius 5px
				outline 0
				
				&:hover
					cursor pointer
					border 2px solid #FFD922
			
	.resultsWrap
		width 60%
		border 2px solid #000
		border-radius 15px
		margin 100px auto
		
		.listWrap
			#buildings
				list-style-type none
				
				li
					font-size 30px
					